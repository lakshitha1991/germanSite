{% extends 'ShipCruiseBundle:Default:mainPage.html.twig' %}
{% block page1 -%} 
    <div class="col-lg-2"> </div>
    <div class="col-lg-8 paddingTop">
        <h1 class="heading">We recommend* a cabin wich is on:</h1>
        <div >   
            <div class="col-lg-8"> 
                <h4 class="resultText">{{cabin}}</h4>
                <div class="progressBar">
                    <p>Sonnenkabin.de sunindex on this side:</p>
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" aria-valuenow="{{sunIndex}}" aria-valuemin="0" aria-valuemax="100" style="width: {{sunIndex}}%;">
                            <span class="sr-only">{{sunIndex}}% Complete</span>
                        </div>
                    </div>
                </div>
                <h1 class="resultPercent">{{sunIndex}}%</h1>
            </div>
            <div class="col-lg-4">
                <img src="{{ asset('bundles/shipcruise/img/ship_sides.png') }}" class="shipSideImage"/>
            </div>
        </div>
    </div>
    <div class="col-lg-2"></div>
{% endblock %}