{% extends '::indexLayout.html.twig' %}

{% block pannelTitle %}
    Route list
{% endblock %}
{% block content_table %}
    <table class="table table-striped table-bordered table-condensed table-responsive">
        <thead>
            <tr>
                <th>Id</th>
                <th>Route</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('route_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.route }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('route_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('route_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
{% block other %}
    <ul>
        <li>
            <a href="{{ path('route_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock %}
